<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomShapeImageView">
        <attr name="shape" format="integer">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
            <enum name="svg" value="3" />
        </attr>
        
        <attr name="svg_raw_resource" format="reference" />
        
    </declare-styleable>

    <declare-styleable name="RoundRectangleImageView">
        <attr name="rx" format="dimension"/>
        <attr name="ry" format="dimension"/>
    </declare-styleable>

</resources>