<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_solid_c8_corners_4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:src="@mipmap/modify_delete" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/enter_business_pwd"
        android:textColor="@color/c6"
        android:textSize="16sp" />

    <com.zbase.view.PasswordEditText
        android:id="@+id/passwordEditText"
        android:layout_width="247dp"
        android:layout_height="42dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="19dp"
        android:inputType="number"
        app:borderRadius="0dp"
        app:borderStrokeWidth="1dp"
        app:passwordBackground="@color/white"
        app:textWordColor="@color/c6"
        app:textWordLength="6"
        app:textWordRadius="8dp" />

    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="9dp"
        android:padding="10dp"
        android:text="@string/forgot_password_more"
        android:textColor="@color/c1"
        android:textSize="13sp" />

</LinearLayout>